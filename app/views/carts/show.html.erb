<h3>Items in your cart</h3>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart.cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product.name %> </td>
        <td><%= link_to 'Increase', update_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Decrease', update_cart_item_path(cart_item) %></td>
        <td><%= link_to 'Destroy', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Remove all items in cart', cart_path, method: :delete, data: { confirm: 'Are you sure?' } %>
